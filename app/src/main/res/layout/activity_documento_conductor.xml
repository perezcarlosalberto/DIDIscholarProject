<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DocumentoConductor"
        android:background="@color/yellow_100">



        <TextView
                android:id="@+id/tv_titulo_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Documentos"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/blue_grey_900"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/spinnerTipoDocumento"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="0.2" />

        <Spinner
                android:id="@+id/spinnerTipoDocumento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="32dp"
                android:minHeight="48dp"
                android:contentDescription="Seleccionar tipo de documento"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titulo_documento"
                app:layout_constraintBottom_toTopOf="@+id/etNumeroPoliza"/>

        <EditText
                android:id="@+id/etNumeroPoliza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Número de Póliza"
                android:inputType="number"
                android:minHeight="48dp"
                android:maxLength="20"
                android:textColor="@color/grey_900"
                android:textColorHint="@color/grey_600"
                app:layout_constraintEnd_toEndOf="@+id/spinnerTipoDocumento"
                app:layout_constraintStart_toStartOf="@+id/spinnerTipoDocumento"
                app:layout_constraintTop_toBottomOf="@+id/spinnerTipoDocumento"
                app:layout_constraintBottom_toTopOf="@+id/etFechaEmision" />

        <EditText
                android:id="@+id/etFechaEmision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Fecha Emisión (YYYY-MM-DD)"
                android:inputType="date"
                android:minHeight="48dp"
                android:maxLength="10"
                android:textColor="@color/grey_900"
                android:textColorHint="@color/grey_600"
                app:layout_constraintEnd_toEndOf="@+id/spinnerTipoDocumento"
                app:layout_constraintStart_toStartOf="@+id/spinnerTipoDocumento"
                app:layout_constraintTop_toBottomOf="@+id/etNumeroPoliza"
                app:layout_constraintBottom_toTopOf="@+id/etFechaVencimiento" />

        <EditText
                android:id="@+id/etFechaVencimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Fecha Vencimiento (YYYY-MM-DD)"
                android:inputType="date"
                android:minHeight="48dp"
                android:maxLength="10"
                android:textColor="@color/grey_900"
                android:textColorHint="@color/grey_600"
                app:layout_constraintEnd_toEndOf="@+id/spinnerTipoDocumento"
                app:layout_constraintStart_toStartOf="@+id/spinnerTipoDocumento"
                app:layout_constraintTop_toBottomOf="@+id/etFechaEmision"
                app:layout_constraintBottom_toTopOf="@+id/spinnerEstado" />

        <Spinner
                android:id="@+id/spinnerEstado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="48dp"
                android:contentDescription="Seleccionar estado del documento"

                app:layout_constraintEnd_toEndOf="@+id/spinnerTipoDocumento"
                app:layout_constraintStart_toStartOf="@+id/spinnerTipoDocumento"
                app:layout_constraintTop_toBottomOf="@+id/etFechaVencimiento"
                app:layout_constraintBottom_toTopOf="@+id/btnRegistrarDocumento" />

        <Button
                android:id="@+id/btnRegistrarDocumento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Registrar Documento"
                app:backgroundTint="@color/teal_200"
                android:textColor="@color/black"
                android:contentDescription="Botón para registrar el documento"

                app:layout_constraintEnd_toEndOf="@+id/spinnerTipoDocumento"
                app:layout_constraintStart_toStartOf="@+id/spinnerTipoDocumento"
                app:layout_constraintTop_toBottomOf="@+id/spinnerEstado"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>