<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F5F5F5">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Vehículo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre / Marca del Vehículo">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombre_vehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Modelo">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etModelo_vehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Color">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Color_vehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Año (Ej. 2024)">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFecha_vehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="4"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/btnRegistrar_vehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Vehículo"
            android:backgroundTint="#FF7D00"
            android:layout_marginTop="32dp"/>

</LinearLayout>